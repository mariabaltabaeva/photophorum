<div class="container mt-1 mb-2">
  <div class="row">
    <div class="col-md-8">
      <section class="card">
        <div class="card-body">
          <h1 class="card-title">
            <%= @topic.name %></h1>
            <% if user_is_authorized_for_topics? %>
             <%= link_to "Edit Topic", edit_topic_path, class: 'btn btn-success' %>
             <%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this topic?' } %>
            <% end %>

          <p class="card-text "><%= @topic.description %></p>
          
          <% @topic.posts.each do |post| %>
            <b><%= link_to post.title, topic_post_path(@topic, post), class:"card-subtitle mt-4 mb-2" %></b>
              <% if post.image.attached? %>
                <%= image_tag post.image, class:"card-img img-fluid mb-4 mt-2" %>
              <% end %>
            
            <% end %>
        </div>
      </section>
    </div>
    <div class="col-md-4">
      <section class="card">
        <div class="card-body">
          <h1 class="card-title">Place for your advertisement</h1>
          <div class="card-img img-fluid mb-2">
            <%= image_tag ("ad.jpg"), class:"card-img mb-2"%>
            <%= image_tag ("ad.jpg"), class:"card-img mb-2"%>
            <%= image_tag ("ad.jpg"), class:"card-img mb-2"%>
          </div>
        </div>
      </section>
    </div>
  </div>
</div>